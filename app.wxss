/**app.wxss**/
.container {
  box-sizing: border-box;
}
button::after{
  border:none;
}
page {
  display: block;
  min-height: 100%;
  background-color: #f9f9fa;
}

view {
  font-family: PingFang SC,Helvetica Neue,Helvetica,-apple-system,BlinkMacSystemFont,Roboto,Arial,Hiragino Sans GB,Microsoft Yahei,Microsoft Jhenghei,sans-serif;
  font-size: 28rpx;
}

view,ul,li,div,p,text,sapn{
  box-sizing: border-box;
}

body {
  font-size: 14rpx;
  width: 100%;
  font-family: PingFang SC,Helvetica Neue,Helvetica,-apple-system,BlinkMacSystemFont,Roboto,Arial,Hiragino Sans GB,Microsoft Yahei,Microsoft Jhenghei,sans-serif;
} 
input {
  font-family: PingFangSC-Regular, sans-serif,Microsoft Yahei,Microsoft Jhenghei;
  padding: 0px;
  border: none;
  box-shadow: none;
}
input:focus, input:active, input:hover{
  box-shadow: none;
  outline: none;
}

input::placeholder{
  color: aliceblue
}

input::-ms-clear {
  color: aliceblue;
  display: none;
}

a {
  text-decoration: none
}

button {
  padding: 0;
  cursor: pointer;
}

button, input, textarea{
  outline: none
}

ul {
  margin: 0;
  padding: 0;
}
  
li {
  list-style: none;
}
  
table {
  border: 0;
  margin: 0;
  border-collapse: collapse;
  border-spacing: 0;

} 
table, th, td {
  padding: 0;
}