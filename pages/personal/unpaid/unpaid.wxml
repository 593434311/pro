
<!--pages/personal/index/index.wxml-->
<view class="unpaid contentW">
  <view class="unpaid_lt">
    <image src="/static/images/icon2/qianbao2@2x.png"></image>
    <text>待支付</text>
  </view>
  <view class="unpaid_rt">
    <text>{{order_info.act_info.title}}</text>
  </view>
</view>
<!-- 参与详情 -->
<view class="tuan_detail contentW">
 <offered data="{{user_list}}" Surplus="{{order_info.act_info}}" ></offered>
</view>
<!-- 信息填写 -->
<view class="information contentW">
  <view class="title">
    <view class="xinxi">
      <image src="/static/images/icon2/xinxi@2x.png"></image>
      <text class="tit_text1">信息填写</text>
    </view>
  </view>
    <view class="information_cont bottom_border">
      <view>姓名</view>
      <input type='text' placeholder="请输入姓名" data-type='1' bindinput="voteuser" />
      <view wx:if="{{isusernum!= null && !isusernum}}" class='usename'>bbbb</view>
    </view>
    <view class="information_cont">
      <view>电话</view>
      <input type='number' placeholder="请输入手机号码" data-type='2' bindinput="voteuser" />
      <view wx:if="{{isuseripne!= null && !isuseripne}}" class="telephone">aaaa</view>
    </view>

</view>
<!-- 购买数量 -->
<view class="quantity contentW">
  <view class="title">
    <view class="shuliang">
      <image src="/static/images/icon2/qianbao@2x.png"></image>
      <text class="tit_text1">购买数量</text>
    </view>
    <view class="tit_quantity">数量：<text>1</text></view>
  </view>
  <view class="quantity_cont">
    <text class="return_money bottom_border">(省钱攻略：如有同伴请邀请TA入团，可获返现)</text>
    <view class="price">
      <text>单价买￥{{order_info.act_info.o_price}}</text>
      <view class="group_price">参团价:<text>￥{{order_info.act_info.p_price}}</text></view>
    </view>
  </view>
</view>
<!-- 优惠券 -->
<view class="coupon contentW">
  <view class="title bottom_border" bindtap='gocuoer'>
    <view class="yhj">
      <image src="/static/images/icon2/youhuiquan@2x.png"></image>
      <text class="tit_text1">优惠券</text>
    </view>
    <view class="money_off">
      <text wx:if="{{wxconpon}}">满{{wxconpon.money_max_y}}元减{{wxconpon.money_reduce_y}}元</text>
      <text wx:else style='color:#b8b8b8'>暂无</text>
      <image src="/static/images/details_index/more@2x.png"></image>
    </view>
  </view>
  <view class="payment">
    <view class="payment_price">支付价格：<text>￥{{order_info.act_info.p_price}}</text></view>
    <view class="discounts">优惠价格：<text>￥{{wxconpon ? wxconpon.money_reduce_y:'0'}}</text></view>
  </view>
</view>
<view class="bottom"> 
  <view class="bottom_cont">
    <view class="bottom_text">实际支付：<text>￥{{onponmony?onponmony:order_info.act_info.p_price}}</text></view>
    <view wx:if="{{isusernum && isuseripne}}"><button class="bottom_pay" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">立即支付</button></view>
    <view wx:else class="bottom_pay" bindtap='regulte'>立即支付</view>
  </view>
</view>
