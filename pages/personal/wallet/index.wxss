/* pages/personal/wallet/index.wxss */
.wallet{

}
.wall_head {
  position: relative;
  width: 100%;
  height:475rpx;
  
}
.wall_bg{
  height: 345rpx;
  width: 100%;
  background: linear-gradient(#fe6e41, #fd933d);
  
}
.wall_mary{
  position: absolute;
  left: 25rpx;
  bottom: 24rpx;
  height: 346rpx;
  width: 702rpx;
  padding: 0 39rpx;
  border-radius: 10rpx;
  text-align: center;
  background-color: #fff;
}
.Price {
  text-align: center;
  color: #e58574;
  font-size: 72rpx;
  margin-top: 50rpx;
}
.Price text{
  font-size: 48rpx;
}
.sure{
  margin-top: 10rpx;
  color: #737373;
  font-size: 24rpx;
}
.counter{
  padding: 32rpx 66rpx;
  background-color: #fff;
  font-size:24rpx;
  display:flex; 
  align-items:baseline ;
  margin-bottom: 12rpx;
}
.counter .explain{
  width:84rpx;
  height:38rpx;
  background-color: #ff9394;
  border-radius:19rpx;
  color:#fff;
  text-align:center;
  margin-right:4rpx;
  
}
.counter text{
  display:block;
  font-size:24rpx;
  line-height:38rpx;
} 


.bill {
  width: 100%;
  height: 121rpx;
  display: flex;
  align-items: center;
  margin-top: 48rpx;
  border-top: 1rpx solid #e4e4e4;
}
.bill>view view:first-child{
  color: #737373;
  font-size: 36rpx;
}
.bill>view view:last-child{
  color: #b8b8b8;
  font-size: 24rpx;
}
.settled{
  width: 311rpx;
}
.line{
  height: 62rpx;
  width: 1rpx;
  background-color: #e4e4e4;
}
.audited{
  width: 311rpx;
}

.deposit{
  background-color: #fff;
 padding:40rpx 66rpx 0 66rpx;
  
}
.deposit_tit{
   font-size:24rpx;
  color:#858585;
  padding-bottom:45rpx;
}
.money{
  display:flex;
  align-items:flex-end;
  padding-bottom:18rpx;
  border-bottom:1rpx solid #e5e5e5;
}
.money text{
  display:block;
  font-size:56rpx;
  position:relative;
  left:-10rpx;
  margin-right:35rpx;
  
}
.money input{
  font-size:24rpx;
  color:#cacaca;
}
.footer{
  background:#fff;
  padding:123rpx 164rpx 207rpx 164rpx;
}
.money_btn{
  width:432rpx;
  height:84rpx;
  line-height: 84rpx;
  border-radius:42rpx;
  background:linear-gradient(#fd9f53,#fe6b3c);
  color:#fff;
  text-align: center;

}