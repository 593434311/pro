/* 参团详情 */
.tuan_detail{

}
 .title {
  display:flex;
  justify-content:space-between;
  align-items:baseline;
  padding:28rpx 0 35rpx 0;
}
.title  .cantuan{
  display:flex;
  align-items:center;
}
.tuan_detail .title  image{
  width:32rpx;
  height:29rpx;
  margin-right:10rpx;
}
.title .tit_text1{
  color:#4c4c4c;
  font-size:30rpx;
}
.title  .tit_text2{
  color:#8d8d8d;
  font-size:24rpx;
}
.title  .tit_text2 text{
  display: inline-block;
  text-align: center;
  line-height:54rpx;
  margin: 0 9rpx; 
  width:32rpx;
  height:39rpx;
  color:pink;
  font-size:24rpx;
  background-image:url(data:image/png;base64,);
  background-repeat:no-repeat;
  background-size:100%; 
}
.head_portrait{
  padding-top: 35rpx;
  padding-bottom:50rpx;
  display: flex;
  justify-content:space-between;
  align-items:center;
  
}
.head_portrait .head_img{
  padding-left: 42rpx;
  display: flex;

}
.head_img .touxiang{
  padding-right:30rpx;
}
.head_img .touxiang image{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
}
.head_portrait .head_more image{
  width:12rpx;
  height:22rpx;
}
.leader{
  position: relative;
}
.leader::after{
  position: absolute;
  left:70rpx;
  top:-10rpx;
  content: "团长";
  height: 24rpx;
  background-color:#ff3638;
  color:#fff;
  border-radius:12rpx;
  font-size:18rpx;
  padding:0 7rpx;
  line-height: 24rpx;
}