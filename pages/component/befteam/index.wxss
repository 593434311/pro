/* pages/component/befteam/index.wxss */
.tuan_list{
  max-height: 345rpx;
  padding:25rpx;
  display: flex;
  justify-content:space-between;
  margin-bottom:6rpx;
  background-color:#fff;
}
.tuan_list .tuan_lt{
  width:245rpx;
  height:245rpx;
}
.tuan_list .tuan_img image{
  width:245rpx;
  height:245rpx;
  border-radius:10rpx;
}
.tuan_list .tuan_rt{
  width:412rpx;
}
.tuan_rt .rt_tit{
  font-size:26rpx;
  margin-bottom:19rpx;
}

.tuan_rt .rt_tit text:nth-of-type(1){
  color:#ff484a;
  position: relative;
  left:-12rpx;
}
.tuan_rt .rt_tit text:nth-of-type(2){
  color:#a7a7a7;
  margin-left:-20rpx;
}

 .price{
  display:flex;
  align-items:baseline;
  margin-bottom: 25rpx;
}
.price s:nth-of-type(1){
  color:#b8b8b8;
  font-size:20rpx;
  margin-right:20rpx;
}
 .price s:nth-of-type(2){
  color:#ff3638;
  font-size:36rpx;
}
.tuan_rt .count_dn{
  display:flex;
  justify-content: flex-start;
}
.tuan_rt .count_dn text{
  color:#939393;
  font-size:24rpx;
  line-height:44rpx;
  margin-right:19rpx;
}
.count_dn .time{
  display: flex;
  align-items: center;
  font-size:20rpx;
  color:#ff5246;
  text-align: center;
  
}
.count_dn .time i{
  display:inline-block;
  width:44rpx;
  height:44rpx;
  line-height:44rpx;
  background:linear-gradient(#fbfbfb 50%, #ffffff 50%);
  border-radius:6rpx;
  margin:0 5rpx;
  box-shadow:1rpx 1rpx 29rpx rgba(213,212,210,0.49);
}
.count_dn .time i:nth-of-type(1){
  box-shadow:2rpx 2rpx 6rpx rgba(213,212,210,0.4);
  margin-left:0;
}

.tuan_rt .collect{
  color:#d5d5d5;
  font-size:18rpx;
  display: flex;
  align-items:flex-end;
  justify-content:space-between;
}

.want{
  height: 50rpx;
  display: flex;
  align-items:center;
}
.want image{
  width:30rpx;
  height:26rpx;
  margin-right:6rpx;
}
.want text{
  font-size: 20rpx;
}
.collect .purchase{
  width:99rpx;
  height:57rpx;
  
}