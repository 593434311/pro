<!--pages/component/Businessact/index.wxml-->
<view class="active_list" data-id='{{data.id}}'  bindtap="goDetails">
  <view class="active_top">
    <image src="http://gtshidai.oss-cn-shanghai.aliyuncs.com{{data.cover_img}}"></image>
  </view>
  <view>
  </view>
  <view class="active_bm">
    <view class="bm_t">
      <view class="bm_tit">
        <text>【{{data.num}}人团】</text>{{data.title}}
      </view>
      <view class="location">
        <text>{{data.city}} {{data.area}}</text>
        <text>#{{data.acttype}}#</text>
      </view>
      <view class="bm_t_m">
        <view class="count_dn">
          <image src="/static/images/icon/biao@2x.png"></image>
          <text>{{data.str}}</text>
        </view>
        <view class="price">
          <s>单价买￥{{data.o_price}}</s>
          <s>￥{{data.p_price}}</s>
        </view>
      </view>
    </view>
    <view class="bm_b want" data-id='{{data.id}}' data-behavior="{{data.iscollect?'no_collect':'collect'}}" data-type='1' catchtap='cuitWent'>
      <image src="/static/images/icon/aixin@2x.png"></image>
      <text>36270人想去</text>
    </view>
  </view>
</view>
