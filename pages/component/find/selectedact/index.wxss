.selectedainst{
  display: flex;
  flex-direction: row;
  padding: 24rpx;
  padding-bottom:15rpx; 
  padding-right: 30rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
}
.list_boximg image{
  width: 124rpx;
  height: 124rpx;
  border-radius: 5px;
}
.box_text{
  position: relative;
  width: 100%;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #7b7b7b;
}
.box_text .box_tit{
  font-size: 28rpx;
  color: #333;
}
.cont {
  position: absolute;
  color: #ccc;
  left: 0;
  bottom: 10rpx;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
}