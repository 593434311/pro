/* pages/component/order/beforder/index.wxss */
.order_box{
  background-color: #fff;
  padding: 0 24rpx;
  margin-bottom: 12rpx;
}
.header{
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
  border-bottom: 1px solid #e5e5e5;
}
.header .head_left {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #8d8d8d;
}

.header .head_right{
  color: #ff9394;
  font-size: 24rpx;
}
.jiantou{
  width: 17rpx;
  height: 28rpx;
  margin-left: 20rpx;
  background:url(data:image/png;base64,);
  background-size: 100%;
  background-repeat: no-repeat
}
.header .head_left image{
  margin-right: 23rpx;
  width: 32rpx;
  height: 32rpx;
}
.counter {
  display: flex;
  justify-content:space-between;
  padding-top: 22rpx;
  padding-bottom: 15rpx;
}
.cout_left{
  display: flex;
  flex-direction: row;
  width: 520rpx;
}
.cout_left .left_text{
  font-size: 24rpx;
  color: #8d8d8d;
  width: 350rpx;
  line-height: 36rpx;
  margin-left: 20rpx;
}
.cout_left image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 5px;
}
.cout_right{
  width: 120rpx;
  text-align: right;
}
.money {
  color: #8d8d8d;
  font-size: 24rpx;
  line-height: 40rpx;
}
.cout_right .num {
  color: #cacaca;
  font-size: 20rpx;
  line-height: 35rpx;
}
.allmony {
  text-align: right;
  line-height: 45rpx;
  margin-top: 12rpx;
  padding-bottom: 13rpx;
  color: #8d8d8d;
  font-size: 24rpx;
  border-bottom: 1px solid #cacaca;
}
.orde_button {
  display: flex;
  padding: 18rpx 0;
  justify-content:  flex-end;
}
.orde_button button{
  width: 130rpx;
  height: 50rpx;
  margin-left: 20rpx;
  font-size: 20rpx;
  color: #b8b8b8;
  line-height: 50rpx;
  background-color: #fff;
  border: 1rpx solid #b8b8b8;
  border-radius: 25rpx;
}
.border_rea button{
  border: 1rpx solid #fd923d;
  background: linear-gradient(to right, #fd923d , #fe6a3c);
  color: #fff;
}