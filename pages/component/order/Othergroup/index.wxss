/* pages/component/order/Othergroup/index.wxss */
.rests_cont{
  display: flex;
  justify-content:space-between;
  padding-bottom:36rpx;

}
.rests_tuan{
  padding:36rpx 0 30rpx 0;
  border-top:1px solid #e5e5e5;

}
.rests_cont .cont_lt{
  display: flex;
  width: 340rpx;
  flex-direction: row;
  padding-left: 42rpx;
  
}
.rests_cont .cont_lt image{
  width:87rpx;
  height:87rpx;
  border-radius: 50%;
  margin-right:25rpx;
}
.rests_cont .cont_lt view{
  display: flex;
  flex-direction: row;
  line-height:87rpx;
  font-size:26rpx;
  color:#8d8d8d;
}
.rests_cont .cont_lt view text{
  display:block;
  width: 120rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.cont_rt{
  display: flex;
  justify-content:flex-end;
  align-items: center;
  width: 360rpx
}
.cont_rt .cont_rt_lt{
  text-align:right;
  font-size:24rpx;
  padding-right:50rpx;
}
.cont_rt_lt .count_dn{
  line-height:46rpx;
} 
.cont_rt .cont_rt_lt image{
  width:24rpx;
  height:24rpx;
  margin-right:12rpx;
}
.cont_rt .cont_rt_lt text:nth-last-of-type(1){
  color:#8d8d8d;
  line-height:24rpx;
}
.cont_rt .cont_rt_lt text:nth-last-of-type(2){
  color:#b8b8b8;
  line-height:46rpx;
}

.cont_rt .cont_rt_rt{

}
.cont_rt .cont_rt_rt image{
  width:88rpx;
  height:45rpx;
}