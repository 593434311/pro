<!--轮播-->
  <view class="header">
    <view  class="swiper-container">
      <swiper autoplay="auto" interval="5000" duration="500" current="{{swiperCurrent}}" bindchange="swiperChange" class="swiper">
          <block wx:for="{{slider}}" wx:key="unique">
            <swiper-item class="swiper-item">
              <view>
                <image src="{{item.picUrl}}"></image>
              </view> 
            </swiper-item>
          </block>
      </swiper> 
      <view class="dots">
        <block wx:for="{{slider}}" wx:key="unique">
          <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
        </block>
      </view>
    </view>
  </view>
  <!--即将成团-->
  <view class="content_tuan">
    <view class="tuan_title">
      <image src="/static/images/icon/jijiangchengtuan@2x.png"></image>
    </view>
    <view class="tuan">
      <swiper class='tuansw' current='{{currentTab}}' indicator-dots="{{false}}" autoplay="{{false}}" circular="{{false}}" duration="200">
        <block wx:for="{{activeData}}" wx:for-index="index" wx:key="{{index}}">
          <swiper-item>
              <berfitem wx:for="{{item}}" wx:for-item="items" wx:key="{{index}}" item="{{items}}"></berfitem>
          </swiper-item>
        </block>
      </swiper>
      
    </view>
  </view>
  <!-- 热门活动 -->
  <view class="load" >
      <!-- <image bindtap='Another' src="/static/images/icon/huanyipi@2x.png" ></image> -->
      <text bindtap='Another'>换一批</text>
  </view>
  <view class="content_active">
    <view class="active_title">
      <image src="/static/images/icon/remenhuodong@2x.png"></image>
      <text>更多</text>
    </view>
    <view class="active">
      <active wx:for="{{RegimentData}}" wx:for-index="index" wx:for-item="item" wx:key="index" listdata="{{item}}"></active>
      <view class="more"></view>
    </view>
    <coupon wx:if="{{isCoupon}}" width_a="582rpx" height_a="700rpx" class="coupon" catchtouchmove="false">
      <image src='/static/images/icon/67782958429263482.png' mode="widthFix" style='border-radius: 5px'></image>
      <view class='text'>这位新朋友你好，送你一张券试试看呗，不是骗子</view>
      <view class='coupon_reduce'>
        <view class='reduce_left'>
          <view class='left_left'>
            <text>￥5</text>
            <view>满50元可用</view>
          </view>
          <view class='left_right'>
            <view>参团立减</view>
            <text>有效期：10日</text>
          </view>
        </view>
        <view class='reduce_right'>
          <view>立减卷</view>
        </view>
      </view> 
      <button open-type="getUserInfo" bindgetuserinfo='bindGetUserInfo'>立即领取</button>
    </coupon>
  </view>
